@model ForgotPasswordViewModel

<div class="container mx-auto" style="width: 500px;">
    <div class="page-header no-padding no-margin">
        <img src="~/Images/bayada_logo.jpg"
             class="img-responsive center-block"
             style="max-width:500px;max-height:100px;margin-top:-7px" />
    </div>

    <h2>@ViewBag.Title</h2>

    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
      <div asp-validation-summary="All"></div>

      <div>@ViewBag.Message</div>
        
      <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"></span>
      </div>

      <div><input type="submit" value="Send Reset Link" class="btn btn-primary" /></div>
    </form>
</div>