<script>
    var reportingList;
    $(document).ready(function () {
        $.ajax({
            url: "/Reporting/GetReportsView",
            dataType: 'application/json',
            complete: function (data) {
                reportingList = JSON.parse(data["responseText"]);
                buildReportingGrid(reportingList);
            }
        });
    });

    function buildContent() {
        $.ajax({
            url: "/Reporting/GetReportsView",
            dataType: 'application/json',
            complete: function (data) {
                reportingList = JSON.parse(data["responseText"]);
                buildReportingGrid(reportingList);
            }
        });
    }

    function buildReportingGrid(allReports) {
        $("#reportingGrid").jsGrid({
            width: "100%",
            height: "auto",
            autoload: false,
            paging: true,
            pageSize: 5,
            pageButtonCount: 5,
            pageIndex: 1,
            data: allReports,
            onItemInserted: function (item) {
                var fieldName = $("#fieldName".val());
                var strValue = $("#strValue").val();
                              
            },

            
            fields: [
                { name: "fieldName", title: "Field Name", width: 100 },
                { name: "strValue", title: "Value", width: 100 },


            ]
        });
    }

</script>



